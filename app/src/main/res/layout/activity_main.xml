<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <!-- App Logo and Name -->
    <LinearLayout
        android:id="@+id/appHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="BINUS app icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BINUS Music Bridge"
            android:textSize="20sp"
            android:textColor="#4B00E0"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/buildVersionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/build_version_background"
            android:textColor="#000000"
            android:textSize="12sp"
            android:text="BUILD: 185"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />
    </LinearLayout>

    <!-- App Description -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Opens Spotify links in YouTube Music and YouTube Music links in Spotify, based on your preference."
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="#333333"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appHeader" />

    <!-- Status Dashboard -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:contentPadding="0dp"
        android:backgroundTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/descriptionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4B00E0"
                android:padding="12dp"
                android:text="Setup Verification"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- Link Interception Status (YouTube Music links) -->
            <LinearLayout
                android:id="@+id/linkInterceptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <View
                    android:id="@+id/linkInterceptionStatusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/status_green"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/linkInterceptionStatusText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="YouTube Music links: Active"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textAppearance="?attr/textAppearanceBody1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#E0E0E0" />
                
            <!-- Spotify Link Interception Status -->
            <LinearLayout
                android:id="@+id/spotifyLinkInterceptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <View
                    android:id="@+id/spotifyLinkInterceptionStatusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/status_green"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/spotifyLinkInterceptionStatusText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Spotify links: Active"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textAppearance="?attr/textAppearanceBody1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#E0E0E0" />

            <!-- YouTube Music Status -->
            <LinearLayout
                android:id="@+id/ytMusicStatusLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <View
                    android:id="@+id/ytMusicStatusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/status_green"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/ytMusicStatusText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="YouTube Music links: Disabled correctly"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textAppearance="?attr/textAppearanceBody1" />
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#E0E0E0" />
                
            <!-- Settings Button -->
            <Button
                android:id="@+id/openSettingsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="#4B00E0"
                android:text="Open App Link Settings"
                android:textColor="#FFFFFF" />
                
            <!-- YouTube Music Settings Button -->
            <Button
                android:id="@+id/openYTMusicSettingsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#E53935"
                android:text="Open YouTube Music Settings"
                android:textColor="#FFFFFF"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- YouTube Music Disabled Warning -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ytMusicDisabledWarningCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:contentPadding="0dp"
        android:backgroundTint="#FFEBEE"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/statusDashboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚠️ YouTube Music App is Disabled"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#D32F2F"/>
                
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="You've selected YouTube Music as your preferred platform, but the YouTube Music app is currently disabled. You need to enable it for proper functionality."
                android:textSize="14sp"
                android:textColor="#333333"/>
                
            <Button
                android:id="@+id/enableYTMusicButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="#D32F2F"
                android:text="Enable YouTube Music App"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/statusCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:contentPadding="0dp"
        android:backgroundTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ytMusicDisabledWarningCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4B00E0"
                android:padding="12dp"
                android:text="Configuration"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preferred Platform:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <RadioGroup
                    android:id="@+id/platformRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp">

                    <RadioButton
                        android:id="@+id/radio_youtube_music"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YouTube Music"
                        android:checked="true"
                        android:buttonTint="#4B00E0"
                        android:textColor="#333333"
                        android:layout_marginEnd="32dp" />

                    <RadioButton
                        android:id="@+id/radio_spotify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spotify"
                        android:buttonTint="#4B00E0"
                        android:textColor="#333333" />
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/testButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Test Redirection"
        android:textAllCaps="false"
        android:padding="12dp"
        android:textSize="16sp"
        android:backgroundTint="#4B00E0"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusCard" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView> 